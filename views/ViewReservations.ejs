<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservaciones</title>
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <%- include('partials/navigationBar') %>
   
    <main class="reservationsList">
        <header class="bookHeaderContainer">
            <h1>Reservaciones</h1>
        </header>

        <section>
            <h2>Unreserved Dates: <%= left %></h2>
            <table>
                <tr>
                    <th>Name</th>
                    <!-- <th>email</th> -->
                    <!-- <th>location</th> -->
                    <th>Subject</th>
                    <th>Duration</th>
                    <th>Link</th>
                    <th>Status</th>
                    <th>Resend</th>
                    <th>Remove</th>
                </tr>
                <% reservations.forEach( (el) => { %>
                <tr>
                    <td><%= el.name %></td>
                    <!-- <td><%= el.email %></td> -->
                    <!-- <td><%= el.location %></td> -->
                    <td><%= el.subject %></td>
                    <td><% if(el.duration <= 60){ %>
                        <%= el.duration %> min
                    <% }else{ %>
                        <%= el.duration/60 %> hours
                    <% } %>
                    <td>
                        <a href='../setDates/selectTimeSlot/<%= el.linkId %>'>Link</a>
                    </td>
                    <td><% timeSlots.forEach( (ele) => { %>
                        <% if (ele.linkId === el.linkId) { %> 
                            <%= ele.selectedSlot ? 'Reserved' : 'Unreserved' %>
                        <% } %>   
                    <% }) %>
                    </td>
                    <td data-id='<%= el.linkId %>'><a class='sendMail'>Send Email</a></td>
                    <td data-id='<%= el.linkId %>'><a class='del'>Remove</a></td>
                </tr>
                <% }) %>
            </table>
        </section>
    </main>
     
    <script src="../js/main.js"></script>
</body>
</html>