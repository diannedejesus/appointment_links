<body>
    <main class='signin clearfix'>

        <section class='logon'>
            <h1>Bienvenido!</h1> 

            <form class="login-form" action="../login" method="POST">
                <div>
                    <label>email</label>
                    <input type="text" name='email' placeholder="email@provider.com">
                </div>

                <div>
                    <label>password</label>
                    <input type="text" name='password' placeholder="********">
                    <a href="#" class="supplimentalLink">Forgot password?</a>
                </div>

                <input type="submit" value='Sign In'>
                
                <section class='signup'>
                    <p>Don't have an account? <a href="/signup" class="supplimentalLink">Signup</a></p>
                </section>
            </form>
        </section>
        
    </main>
</body>
</html>